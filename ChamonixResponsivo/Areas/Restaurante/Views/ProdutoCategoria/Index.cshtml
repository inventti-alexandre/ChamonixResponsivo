@model IEnumerable<Chamonix.Domain.Models.Produtos.ProdutoCategoria>

@{
    ViewBag.Title = "Categoria de Produtos";
}

<h2>Categoria de Produtos</h2>

<p>
    @Html.ActionLink("Nova Categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProdutoCategoriaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ProdutoCategoriaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ProdutoCategoriaId })
        </td>
    </tr>
}
</table>
