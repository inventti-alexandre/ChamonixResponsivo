@model IEnumerable<Chamonix.Domain.Models.Admin.Ramo>

@{
    ViewBag.Title = "Chamonix";
}

<h2>Ramo de atividade do fornecedor</h2>

<p>
    @Html.ActionLink("Novo Ramo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlteradoEm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlteradoEm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.RamoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.RamoId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.RamoId })
        </td>
    </tr>
}

</table>
