@model IEnumerable<Chamonix.Domain.Models.Admin.Fornecedor>

@{
    ViewBag.Title = "Fornecedores";
}

<h2>Fornecedores</h2>

<p>
    @Html.ActionLink("Novo Fornecedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ramo.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ramo.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FornecedorId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.FornecedorId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.FornecedorId })
        </td>
    </tr>
}

</table>
