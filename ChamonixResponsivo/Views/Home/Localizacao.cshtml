<script>
    function initMap() {
        var uluru = { lat: -29.196360, lng: -51.555092 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
        infowindow = new google.maps.InfoWindow({
            content: '<center><strong><span style="color:red">Chamonix Fondue</span></strong><br><span style="color:black">BR 444Km 18<br>Vale dos Vinhedos<br>Bento Gonçalves - RS</span></center>'
        });
        google.maps.event.addListener(marker, 'click', function () {
            infowindow.open(map, marker);
        });
        infowindow.open(map, marker);
    }
</script>
